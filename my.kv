<MyGrid>

    date_purchase: date
    name: name
    cost: cost
    category: category
    pob: pob
    comments: comments

	GridLayout:
		size: root.width - 200, root.height - 200
		pos: 100, 100
		cols:1

		GridLayout:
			size_hint: (1, 0.17)
			cols: 3
			Label:
				size_hint: (1, 1)
				text: "Date of Purchase: "
			TextInput:
				size_hint: (0.9, 1)
				id: date
				multiline: False
				hint_text: "dd/mm/yyyy"
			Button:
				size_hint: (0.1, 1)
				on_press: root.cal()
				Image:
					source: 'cal-icon.jpg'
					y: self.parent.y + self.parent.height - 200
					x: self.parent.x

		GridLayout:
			cols:2
			Label:
				text: "Puprose of Expanse: "
			TextInput:
				id: name
				multipile: False

			Label:
				text: "Amount Spent: "
			TextInput:
				id: cost
				input_filter: "float"
				multiline: False

			Label:
				text: "Category: "
			TextInput:
				id: category
				multiline: False

			Label:
				text: "Place of Purchase: "
			TextInput:
				id: pob
				multiline: False

			Label:
				text: "Comments: "
			TextInput:
				id: comments
				multiline: False
		Button:
			text: "Submit"
			on_press: root.btn()