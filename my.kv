<MyGrid>

    date_purchase: date
    name: name
    cost: cost
    category: category
    means: means
    pob: pob
    comments: comments

	GridLayout:
		size: root.width - 200, root.height - 200
		pos: 100, 100
		cols:1

		GridLayout:
			size_hint: (1, 0.17)
			cols: 3
			Label:
				size_hint: (1, 1)
				text: "Date of Purchase: "
			TextInput:
				size_hint: (0.9, 1)
				id: date
				multiline: False
				hint_text: "dd/mm/yyyy"
			Button:
				size_hint: (0.1, 1)
				on_press: root.cal()
				background_normal:'cal-icon.jpg'

		GridLayout:
			cols:2
			Label:
				text: "Puprose of Expanse: "
			TextInput:
				id: name
				font_name: "Arial"
				multipile: False

			Label:
				text: "Amount Spent: "
			TextInput:
				id: cost
				input_filter: "float"
				font_name: "Arial"
				multiline: False

			Label:
				text: "Category: "
			TextInput:
				id: category
				font_name: "Arial"
				multiline: False

			Label:
				text: "Means of Purchase: "
			TextInput:
				id: means
				font_name: "Arial"
				multiline: False

			Label:
				text: "Place of Purchase: "
			TextInput:
				id: pob
				font_name: "Arial"
				multiline: False

			Label:
				text: "Comments: "
			TextInput:
				id: comments
				font_name: "Arial"
				multiline: False
		Button:
			id: submit_button
			text: "Submit"
			margin: (10 , 10 , 10, 10)
			size_hint: (0.3, 0.15)
			on_press: root.btn()